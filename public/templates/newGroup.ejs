<!DOCTYPE html>

<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    New Group
    <small>Create a New Group</small>
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="col-lg-offset-2 col-lg-8 col-md-offset-1 col-md-10">
    <!-- small box -->
    <form method="POST" action="/group/createNewGroup">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title" float:left>New Group Name</h3>
          
            <input type="text" placeholder='e.g. Jumpropers United' name="newGroupName">
          
        </div>
        <div class="box-body">
          <h4>Description:</h4>
            describe your new group:  <input type="text" placeholder='e.g. Jumping rope is what we do.' name="description" width="400px">
          <h4>Category</h4>
          <div ng-repeat="category in categories">
            <div class="checkbox">
              <label>
                <input type="checkbox" name="{{category.name}}" value="{{category._id}}">{{category.name}}
              </label>
            </div>
          </div>
          <h4>Zipcode</h4>
            where is your group located? <input type="text" placeholder='e.g. 84604' name="zipcode" width="400px">
          <h4>Schedule:</h4>
            When will you get together?  <input type="text" placeholder='e.g. Saturdays at 10:00am.' name="schedule" width="400px">
        </div>
        <div>
          <button>
            <input type="submit" value="Create Group" class="btn btn-default">
          </button>
        </div>
      </div>

    </form>
  </div><!-- /.row -->
</section><!-- /.content -->