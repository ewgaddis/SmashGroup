<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Profile
    <small>{{user.username}}</small>
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <!-- Main row -->
  <div class="row">
    <!-- Left col -->
    <section class="col-lg-10 connectedSortable">
      <!-- Personal Box -->
      <div class="box box-success">
        <div class="box-header">
          <h2 class="box-title">Personal</h2>
        </div>
        <form method="POST" action="/users/update" class="form-horizontal">
          <div class="form-group">
            <div class="col-xs-12 col-sm-offset-1 col-sm-4">
              <label class="control-label">Username:</label>
              <input type="text" name="username" value="{{user.username}}" class="form-control" readonly>
              
              <label class="control-label">Name:</label>
              <input type="text" name="firstname" value="{{user.firstName}}" class="form-control">
              <input type="text" name="lastname"  value="{{user.lastName}}"  class="form-control">
              
              <label class="control-label">Email Address:</label>
              <input type="text" name="email" value="{{user.email}}" class="form-control">
              
              <label class="control-label">Phone Number:</label>
              <input type="text" name="phone" value="{{user.phoneNumber}}" class="form-control">
            </div>
            <div class="col-xs-12 col-sm-2">
              <label class="control-label">Interests:</label>
              <div ng-repeat="category in categories">
                <div class="checkbox">
                  <label>
                    <input type="checkbox" name="{{category.name}}" value="{{category._id}}" ng-checked="isInterested(category._id)">{{category.name}}
                  </label>
                </div>
              </div>
            </div>
          </div>
          <div class="box-footer">
	        <div class="input-group">
	          <input type="submit" value="Save" class="btn btn-default">
	        </div>
	      </div>
        </form>
      </div><!-- /.box (personal box) -->
    </section><!-- /.Left col -->
  </div>
</section><!-- /.content -->