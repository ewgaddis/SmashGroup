<!DOCTYPE html>

<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Groups
    <small>Find a New Group</small>
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <!-- Small boxes (Stat box) -->
  <div class="row">
    <div ng-repeat="group in groups">
      <div class="col-lg-3 col-xs-8">
        <!-- small box -->
        <div class="small-box bg-aqua">
          <div class="inner">
            <h3>{{group.name}}</h3>
          </div>
          <div class="icon">
            <i class="ion ion-bag"></i>
          </div>
          <a href="/#/group/{{group._id}}" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
     </div>
    </div>
   
  </div><!-- /.row -->
</section><!-- /.content -->