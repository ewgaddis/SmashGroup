<!DOCTYPE html>

<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    Groups
    <small>Find a New Group</small>
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <!-- Small boxes (Stat box) -->
  <div class="row">
    <div ng-repeat="group in groups">
      <div class="col-lg-4 col-md-6 col-xs-12">
        <!-- small box -->
        <div class="small-box" ng-class="{'bg-aqua': $index%4==0, 'bg-green': $index%4==1, 'bg-yellow': $index%4==2 , 'bg-red': $index%4==3}">
          <div class="inner">
            <h3 style="white-space:normal;">{{group.name}}</h3>
          </div>
          <div class="box-body">
            <h4>Description:</h4>
            <p>{{group.description}}</p>
          </div>
          <a href="/#/group/{{group._id}}" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
     </div>
    </div>
   
  </div><!-- /.row -->
</section><!-- /.content -->